<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DummyLogin.MainPage">

    <StackLayout VerticalOptions="Center">
        
        <!--<Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>-->



        <Image HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"
            Source="logo.png" WidthRequest="{OnPlatform iOS=300, Android=250}" />

       


        <Label Text="Welcome to Irow9" FontSize="Title" HorizontalTextAlignment="Center" TextColor="#DF1E29" />
        <Label x:Name="greetText" Text="Sign in to continue" FontSize="14" HorizontalTextAlignment="Center"/>
        <!--<Label Text="Enter your mobile no" FontSize="14" TextColor="Black" Margin="15,25,0,0"/>-->

        <Entry x:Name="email"  Placeholder="Email Address"  Keyboard="Email" Margin="15,0,15,0"/>
        <Entry x:Name="password"  Placeholder="Password"    IsPassword="True" Margin="15,0,15,0"/>

        <Button Text="Send Otp" BackgroundColor="#DF1E29" Margin="15"  Clicked="Button_ClickedAsync"/>
        <Button Text="Signup" BackgroundColor="#DF1E29" Margin="15"  Clicked="signup_Cliced"/>


    </StackLayout>

</ContentPage>
